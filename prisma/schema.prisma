// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/app/_generated/prisma"
}

datasource db {
  provider = "sqlite"
}


model User {
  id        String      @id @default(cuid())
  firstName String
  lastName  String
  email     String    @unique
  hashedPassword  String

  role          Role
  request       Request?
}

enum Role {
  CLIENT
  ADMIN
}


model Request {
  id              Int    @id @default(autoincrement())
  number          String
  city            String
  address         String
  zipCode         String
  gardenStyle     String
  maxPrice        String
  startDate       DateTime
  userId          String @unique 


  user           User   @relation(fields: [userId], references: [id])
  files          Requestfile[]
}

model Requestfile {
  id        Int   @id @default(autoincrement())
  url       String 
  request   Request  @relation(fields: [requestId], references: [id])
  requestId Int
}


model Style {
  id            Int       @id @default(autoincrement())
  name          String 
  description   String
  sketch        String
  features      String?
  
  images        Image[]
}

model Image {
  id            Int       @id @default(autoincrement())
  filename      String 
  styleId       Int

  style         Style @relation(fields: [styleId], references: [id])
}



model Question {
  id            Int       @id @default(autoincrement())
  quest         String 
  answer        String 
}