generator client {
  provider = "prisma-client"
  output   = "../src/app/_generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Request {
  id              Int    @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String
  number          String
  city            String
  address         String
  zipCode         String
  gardenStyle     String
  maxPrice        String
  startDate       DateTime

  images          RequestImage[]
  planUrl         PlanUrl
  // plus tard : planUrl ou une relation vers un mod√®le Plan
}

model RequestImage {
  id        Int   @id @default(autoincrement())
  url       String   // URL vers EdgeStore
  request   Request  @relation(fields: [requestId], references: [id])
  requestId String
}


model RequestImage {
  id        Int   @id @default(autoincrement())
  url       String   // URL vers EdgeStore
  request   Request  @relation(fields: [requestId], references: [id])
  requestId String
}


model Style {
  id            Int       @id @default(autoincrement())
  name          String 
  description   String
  
  images        Images[]
}

model Image {
  id            Int       @id @default(autoincrement())
  filename      String 
  style         Style @relation(fields: [styleId], references: [id])
}

model Question {

  id            Int       @id @default(autoincrement())
  quest         String 
  answer        String 
}

model User {

}