// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/app/_generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  firstName String
  lastName  String
  email     String    @unique
  phoneNumber String
  zipCode     String
  city        String
  hashedPassword  String

  role          String @default("CLIENT")
  requests      Request[]
}


model Request {
  id          Int      @id @default(autoincrement())
  serviceType String
  gardenStyle String
  budget      String
  deadline    String
  addons      String   // Stored as comma-separated string or JSON string
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  files       Requestfile[]
  createdAt   DateTime @default(now())
}

model Requestfile {
  id        Int   @id @default(autoincrement())
  url       String 
  request   Request  @relation(fields: [requestId], references: [id])
  requestId Int
}


model Style {
  id            Int       @id @default(autoincrement())
  name          String 
  description   String
  sketch        String
  features      String?
  
  images        Image[]
}

model Image {
  id            Int       @id @default(autoincrement())
  filename      String 
  styleId       Int

  style         Style @relation(fields: [styleId], references: [id])
}



model Question {
  id            Int       @id @default(autoincrement())
  quest         String 
  answer        String 
}