// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/app/_generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Style {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  plants      StyleOnPlant[]
}

model Plant {
  id     Int     @id @default(autoincrement())
  name   String
  styles StyleOnPlant[]
}

model StyleOnPlant {
  style   Style @relation(fields: [styleId], references: [id])
  styleId Int
  plant   Plant @relation(fields: [plantId], references: [id])
  plantId Int

  @@id([styleId, plantId])
}

model Question {
  id            Int       @id @default(autoincrement())
  theme         String
  quest         String 
  answer        String 
}
