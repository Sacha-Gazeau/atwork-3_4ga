generator client {
  provider = "prisma-client"
  output   = "../src/app/_generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Request {
  id              String    @id @default(cuid())
  firstName       String
  lastName        String
  email           String
  number          String
  city            String
  address         String
  zipCode         String
  gardenStyle     String
  maxPrice        String
  startDate       DateTime
}


model Style {
  id            Int       @id @default(autoincrement())
  name          String 
  description   String
  
  images        Images[]
}

model Image {
  id            Int       @id @default(autoincrement())
  filename      String 
  style         Style @relation(fields: [styleId], references: [id])
}

model Question {

  id            Int @id @default(autoincrement())
  quest         String 
  answer        String 
}